{
  "ts-node": {
    "files": true,
  },
  "compilerOptions": {
    "target": "es5",                               
    "lib": [
      "es2017",
      "DOM"
      ],                                        
    "experimentalDecorators": true,                  
    "module": "commonjs",                               
    "baseUrl": ".",                                  
    "paths": {
      "~src/*": ["src/*"],
    },          
    "sourceMap": true,                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                            
    "strictNullChecks": true,                                                  
    "noUnusedLocals": true,                           
    "noUnusedParameters": true,                                     
    "skipLibCheck": true                                
  }
}